<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dbdbdb">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/ivChatPostImage"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:layout_marginLeft="@dimen/chat_menu_margin"
        android:layout_marginRight="@dimen/chat_menu_margin"
        android:src="@android:drawable/ic_menu_camera"/>

    <TextView
        android:id="@+id/tvChatPostMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:inputType="textCapCharacters"
        android:layout_marginLeft="@dimen/chat_menu_margin"
        android:layout_marginRight="@dimen/chat_menu_margin"
        android:textColor="@color/appLightGray"
        android:text="@string/send"/>

    <EditText
        android:id="@+id/etChatInput"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:inputType="none"
        android:layout_toLeftOf="@id/tvChatPostMessage"
        android:layout_toRightOf="@id/ivChatPostImage"/>

</RelativeLayout>